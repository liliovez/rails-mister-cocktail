<div class="container">
<h1>Description for <%= @cocktail.name %></h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs text-center">
    <%= f.input :description %>
    <%= f.input :ingredient, collection: Ingredient.all, prompt: "Select Ingredient" %>
  </div>

  <div class="form-actions">
    <%= f.submit "add a dose", class: "btn btn-primary" %>
  </div>

<% end %>
<h3>List of existing ingredients</h3>
<% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %>  <%= dose.ingredient.name %></li>
  <% end %>


<%= link_to 'Back', cocktail_path(@cocktail), :class=>"btn btn-primary"%>

</div>
