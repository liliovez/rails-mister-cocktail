
<div class="container">
<h1>Cocktails</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4 small-padded">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path(cocktail.photo.path, width: 400, height: 300, crop: :fill) %>');">
        <div class="card-description">
          <h2> <%= cocktail.name %> </h2>
        </div>
        <%= link_to "", cocktail_path(cocktail), :class => "card-link"  %>
      </div>
    </div>
  <% end %>
</div>


<br>

<%= link_to 'Add a cocktail', new_cocktail_path %>

</div>

